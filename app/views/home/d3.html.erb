<!DOCTYPE html>
<meta charset="utf-8">
<style>

text {
  font: 10px sans-serif;
}

</style>
<body>
<div class='sydney'>
  Sydney
</div>
<%= select("trend", "location", Trend.all.pluck(:location).uniq) %>
<script src="//d3js.org/d3.v3.min.js"></script>
<script>



// Document.find_by_class('Sydney').change Font color to (color('Sydney'))

updateData();

$("#trend_location").change(updateData);



function updateData() {
  d3.select("svg").remove();

  var diameter = 960,
      format = d3.format(",d"),
      color = d3.scale.category20c();

  var bubble = d3.layout.pack()
      .sort(null)
      .size([diameter, diameter])
      .padding(1.5);

  var svg = d3.select("body").append("svg")
      .attr("width", diameter)
      .attr("height", diameter)
      .attr("class", "bubble");


  var trend_location = $("#trend_location").val();

  d3.json("/trends.json?location=" + trend_location, function(error, root) {
    if (error) throw error;

    var data = {children: root};


    var node = svg.selectAll(".node")
        .data(bubble.nodes(data))
      .enter().append("g")
        .attr("class", "node")
        .attr("transform", function(d) { return "translate(" + d.x + "," + d.y + ")"; });

    node.append("title")
        .text(function(d) {
          return d.name + ": " + format(d.value);
        });

    node.append("circle")
        .attr("r", function(d) { return d.r; })
        .style("fill", function(d) {
          console.log('Location should change to:', d.location);
          return color(d.location);
        });

    node.append("text")
        .attr("dy", ".3em")
        .style("text-anchor", "middle")
        .text(function(d) {
          return d.name;
        });
  });

  d3.select(self.frameElement).style("height", diameter + "px");
}

</script>

</body>
